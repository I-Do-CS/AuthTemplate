{
  // Serilog configuration for logging
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": { // Consider Changing these to Debug in Production.
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u11}] {Message:lj}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "Path": "Logs/log-.txt",
          "FileSizeLimitBytes": 524288000, // 500MB
          "RollOnFileSizeLimit": true,
          "RetainedFileCountLimit": 15,
          "RollingInterval": "Day",
          "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u11}] {Message:lj}{NewLine}",
          "Formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "AuthTemplate", // Change this for your app
      "Environment": "Development"
    }
  },

  "AllowedHosts": "*",

  // I use PostgreSQL running on port 3334 on my machine.
  "ConnectionStrings": { // Change this for your app.
    "Default": "Server=localhost;Port=3334;Database=AuthTemplate;User Id=postgres;Password=password"
  },

  // For strict CORS, set AllowAll to "false" and specify your settings.
  // Don't touch this section if you don't know what it does.
  "CorsOptions": {
    "AllowAll": true,
    // Won't work unless "AllowAll": "false". All methods allowed (*) if empty.
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "HEAD" ], // Change this if necessary
    // Won't work unless "AllowAll": "false". All origins allowed (*) if empty.
    "AllowedOrigins": [ "https://ui.mycompany.com", "https://app.mycompany.com" ] // Change this for your app
  },

  // Change the values of this section for your app
  "JwtOptions": {
    // Must be at least 256 bytes (32 characters)
    "Secret": "ForProdStoreThisInEnvVarsOrSomewhereSafeLikeAzureVault",
    "Issuer": "https://api.mycompany.com",
    "Audience": "https://ui.mycompany.com",
    "AccessTokenExpirationTimeInMinutes": 15,
    "RefreshTokenExpirationTimeInDays": 15
  },

  // Credentials of the initial admin that's created on startup.
  // Use these for privilaged access and create more secure admins, 
  // then get rid of this one and set "AddInitialAdmin": false.
  "InitialAdminOptions": {
    "AddInitialAdmin": true,
    "Email": "admin@application.com",
    "Password": "ChangeThisAS4P!"
  }
}
